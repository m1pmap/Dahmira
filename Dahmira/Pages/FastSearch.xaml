<Window x:Class="Dahmira.Pages.FastSearch"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Dahmira.Pages"
        mc:Ignorable="d"
        Title="Поиск внутри базы" Height="98" Width="316" ResizeMode="NoResize" KeyDown="Window_KeyDown" WindowStyle="None" MouseDown="Window_MouseDown" AllowsTransparency="True" Background="Transparent" BorderThickness="0">

    <Window.Resources>
        <!--Стиль для кнопки с закруглёнными краями-->
        <ControlTemplate TargetType="Button" x:Key="btTemplate">
            <Border x:Name="border"
                     CornerRadius="4" 
                     Background="{TemplateBinding Background}">
                <Grid 
             HorizontalAlignment="Center" 
             VerticalAlignment="Center">
                    <ContentPresenter HorizontalAlignment="Center" 
                               VerticalAlignment="Center" 
                               Content="{TemplateBinding Content}" 
                               ContentTemplate="{TemplateBinding ContentTemplate}"/>
                </Grid>
            </Border>
            <ControlTemplate.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter TargetName="border" Property="Background" Value="LightBlue"/>
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>

        <Style TargetType="TextBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="FontFamily" Value="Arial Black"/>
            <Setter Property="Foreground" Value="Gray"/>
            <Setter Property="BorderBrush" Value="Gray"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="border"
                 Background="White"
                 BorderBrush="{TemplateBinding BorderBrush}"
                 BorderThickness="1.7"
                 CornerRadius="4">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <!-- Изменение цвета при фокусе -->
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="CornFlowerBlue"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>


    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="40"/>
        </Grid.ColumnDefinitions>
        <Border Background="White" CornerRadius="15" BorderThickness="1.7" BorderBrush="Gray">
            <StackPanel Margin="5,5,5,5" Grid.ColumnSpan="2">
                <CheckBox x:Name="checkBox" Margin="5" Content="Искать ниже с выделенной строки" Foreground="Gray" Checked="checkBox_Checked"></CheckBox>
                <TextBox x:Name="searchingText" Margin="5,0,5,0" Foreground="Gray" FontSize="15" Padding="2" Width="auto" FontFamily="Arial" TextChanged="searchingText_TextChanged"/>
                <Button x:Name="Search_button" 
                Margin="5" Content="ПОИСК" FontFamily="Arial Black" Height="25"
                Template="{StaticResource btTemplate}" 
                FontSize="12" 
                Foreground="White" 
                Background="#a3a3a4"
                Click="Search_button_Click"/>
            </StackPanel>
        </Border>

        <Button x:Name="exit_button" Grid.Column="1"
                Template="{StaticResource btTemplate}" 
                Height="30" Width="30"
                Background="OrangeRed" 
                VerticalAlignment="Top"
                HorizontalAlignment="Center"
                Margin="0,10,0,0" 
                ToolTip="Закрыть окно"
                Click="exit_button_Click">

            <Image Source="/resources/images/delete_image.png" Height="25" Width="25"/>
        </Button>
    </Grid>
</Window>
