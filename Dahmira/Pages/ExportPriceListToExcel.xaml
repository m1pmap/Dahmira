<Window x:Class="Dahmira.Pages.ExportPriceListToExcel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Dahmira.Pages"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="Экспорт из прайса в Excel + картинки" Height="160" Width="485"
        WindowStartupLocation="CenterScreen" WindowStyle="None" AllowsTransparency="True" Background="Transparent" KeyDown="Window_KeyDown" MouseDown="Window_MouseDown">

    <Window.Resources>
        <!--Стиль для кнопки с закруглёнными краями-->
        <ControlTemplate TargetType="Button" x:Key="btTemplate">
            <Border x:Name="border"
                  CornerRadius="4" 
                  Background="{TemplateBinding Background}">
                <Grid 
                      HorizontalAlignment="Center" 
                      VerticalAlignment="Center">
                    <ContentPresenter HorizontalAlignment="Center" 
                        VerticalAlignment="Center" 
                        Content="{TemplateBinding Content}" 
                        ContentTemplate="{TemplateBinding ContentTemplate}"/>
                </Grid>
            </Border>
            <ControlTemplate.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter TargetName="border" Property="Background" Value="LightBlue"/>
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>

        <Style TargetType="ComboBoxItem">
            <Setter Property="Foreground" Value="Gray"/>
            <!-- Цвет текста -->
            <Setter Property="Background" Value="White"/>
            <!-- Цвет фона -->
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="FontFamily" Value="Arial Black"/>
            <Setter Property="Foreground" Value="Gray"/>
            <Setter Property="BorderBrush" Value="Gray"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="border"
                 Background="White"
                 BorderBrush="{TemplateBinding BorderBrush}"
                 BorderThickness="1.7"
                 CornerRadius="4">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <!-- Изменение цвета при фокусе -->
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="CornFlowerBlue"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>



    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="45"/>
        </Grid.ColumnDefinitions>
        <Border Background="White" BorderBrush="Gray" BorderThickness="1.7" CornerRadius="15" Grid.Column="0">
            <Grid Margin="10,0,10,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="33"/>
                    <RowDefinition Height="35"/>
                    <RowDefinition Height="52"/>
                    <RowDefinition Height="55"/>
                </Grid.RowDefinitions>

                <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,8,0,0">
                    <RadioButton x:Name="export_one_rb" Tag="1"
                                 VerticalAlignment="Center"
                                 Checked="TypeExport_RB_Checked"
                                 GroupName="TypeExport"
                                 Content="Экспортировать производителя" VerticalContentAlignment="Center" 
                                 FontFamily="Arial" Foreground="Gray"/>

                    <Border BorderBrush="Gray" BorderThickness="1.7" CornerRadius="5" Width="216" Height="24" Margin="5,0,0,0">
                        <ComboBox x:Name ="Manufacturer_CB"  
                                   IsEditable="True"  
                                   FontSize="15"
                                   FontFamily="Arial"
                                   Foreground="Gray"
                                   VerticalAlignment="Center"
                                   DisplayMemberPath="name"
                                  BorderThickness="0" Margin="4,0"/>
                    </Border>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Grid.Row="1">
                    <RadioButton x:Name="export_all_rb" Tag="2"
                                 VerticalAlignment="Center"
                                 Checked="TypeExport_RB_Checked"   
                                 GroupName="TypeExport"
                                 Content="Экспортироваь весь прайс-лист"
                                 Foreground="Gray" FontFamily="Arial"
                                 VerticalContentAlignment="Center"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Grid.Row="2">
                    <StackPanel>
                        <Label Content="Путь экспорта:" 
                               VerticalAlignment="Center"
                               FontFamily="Arial"
                               FontSize="12"
                               Foreground="Gray"/>

                        <TextBox x:Name="patch_tb"
                                 Margin="0,-5,0,0"  
                                 Text="Укажите путь для экспорта файла" 
                                 FontFamily="Arial"
                                 Foreground="Gray" Padding="2"
                                 Width="356" FontSize="15"/>
                    </StackPanel>

                    <Button x:Name="ExcelImportFolderPath_button"
                            Template="{StaticResource btTemplate}" 
                            Height="25" Width="25"
                            Margin="5,10,0,0"
                            Background="Coral"  
                            ToolTip="Указать путь к папке"
                            Click="GetPach_bt_Click">

                        <Image Source="pack://application:,,,/resources/images/upload_from_file.png" Height="20" Width="20"/>
                    </Button>

                    <Button x:Name="DeletePriceFolderPath_button"
                            Template="{StaticResource btTemplate}" 
                            Height="25" Width="25"
                            Background="OrangeRed"  
                            Margin="5,10,0,0"
                            ToolTip="Удалить путь к папке"
                            Click="DeletePach_bt_Click">

                        <Image Source="pack://application:,,,/resources/images/delete_image.png" Height="20" Width="20"/>
                    </Button>
                </StackPanel>


                <Button x:Name="Export_button"
                        Grid.Row="3"
                        Template="{StaticResource btTemplate}" 
                        Content="ЭКСПОРТ" 
                        VerticalAlignment="Top"
                        Width="auto" 
                        Height="25" 
                        Background="MediumSeaGreen" Foreground="White" FontFamily="Arial Black" FontSize="14"
              
                        Click="Export_DB_bt_Click"
                        />
            </Grid>
        </Border>

        <Button x:Name="exit_button" Grid.Column="1"
                Template="{StaticResource btTemplate}" 
                Height="35" Width="35"
                Background="OrangeRed" 
                VerticalAlignment="Top"
                HorizontalAlignment="Left"
                Margin="5,15,0,0" 
                ToolTip="Закрыть окно"
                Click="exit_button_Click">

            <Image Source="/resources/images/delete_image.png" Height="28" Width="28" Margin="0,0,0,0"/>
        </Button>
    </Grid>
</Window>
