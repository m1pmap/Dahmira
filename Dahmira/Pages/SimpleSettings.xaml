                                    <Label Content="Авторизация" Foreground="Gray" FontSize="15" Margin="-7,10,0,0"/>

                                    <Label Content="Почта" Foreground="Gray" FontSize="12" FontFamily="Arial" Margin="0,-5,0,0"/>
                                    <TextBox x:Name="mail_textBox" HorizontalAlignment="Left" Foreground="Gray" FontSize="14" Padding="2" Width="345" Margin="0,-5,0,0"/>

                                    <Button x:Name="checkMail_button" Width="345" Margin="0,5,0,0" Content="Подтвердить почту" 
