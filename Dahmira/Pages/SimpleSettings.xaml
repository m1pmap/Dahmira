                                    <!--<Label Content="Интервал сообщений mail(сек):" Foreground="Gray" FontFamily="Arial" FontSize="12" Height="26" Margin="0,0,0,0"/>
                                    <TextBox x:Name="CheckingIntervalFromMail_textBox" Width="345" Padding="2" Margin="0,-5,0,0" HorizontalAlignment="Left" Foreground="Gray" FontSize="14"/>
                                    <CheckBox x:Name="IsNotificationsWithSound_checkBox" 
                                              VerticalContentAlignment="Center" 
                                              Foreground="Gray" FontFamily="Arial" 
                                              Content="Уведомления со звуком" 
                                              HorizontalAlignment="Left" 
                                              Margin="0,5,0,0" 
                                              BorderBrush="Gray" 
                                              ClickMode="Release"/>-->

                                    <Label Content="Работа с прайсом" Foreground="Gray" FontSize="15" Margin="-7,10,0,0"/>

                                    <Label Content="Папка для загрузки и выгрузки прайса на сайт" Foreground="Gray" FontFamily="Arial" FontSize="12" Margin="0,-5,0,0"/>


                                    <StackPanel Margin="0,-5,0,0" Orientation="Horizontal">

                                        <TextBox x:Name="PriceFolderPath_textBox" Padding="2"
                                                 Width="285" Margin="0,0,0,0" Foreground="Gray" FontSize="14"/>

                                        <Button x:Name="AddPriceFolderPath_button"
                                                Template="{StaticResource btTemplate}" 
                                                Height="25" Width="25"
                                                Background="Coral"  
                                                Margin="5,0"
