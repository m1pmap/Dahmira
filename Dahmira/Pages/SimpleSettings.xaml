                                              HorizontalAlignment="Left" 
                                              Foreground="Gray"
                                              VerticalContentAlignment="Center"
                                              FontFamily="Arial"
                                              Margin="0,5,0,0"
                                              BorderBrush="Gray" 
                                              ClickMode="Release"/>

                                    <CheckBox x:Name="IsInsertExcelCategory_checkBox"
                                                Content="Вставлять категории" 
                                                HorizontalAlignment="Left" 
                                                Foreground="Gray"
                                                VerticalContentAlignment="Center"
                                                FontFamily="Arial"
                                                Margin="0,5,0,0"
                                                BorderBrush="Gray" 
                                                ClickMode="Release"/>

                                    <CheckBox x:Name="IsInserDepartmentRequestWithCalc_textBox" 
                                              Content="Экспорт заявки техотдела с расчётом" 
                                              HorizontalAlignment="Left" 
                                              Foreground="Gray"
                                              VerticalContentAlignment="Center"
                                              FontFamily="Arial"
                                              Margin="0,5,0,0"
                                              BorderBrush="Gray"
                                              Checked="IsInserDepartmentRequestWithCalc_textBox_Checked"
                                              Unchecked="IsInserDepartmentRequestWithCalc_textBox_Unchecked"
                                              ClickMode="Release"/>

                                    

                                    <Label Content="Вывод данных на FTP-сервер" Foreground="Gray" FontSize="15" Margin="-7,10,0,0"/>
                                    <Label x:Name="LastDateUpdatePrice_label" Content="Последняя версия прайса: 22.01.2025" Foreground="Gray" FontSize="12" FontFamily="Arial" Margin="-5,0,0,0"/>

                                    <Button x:Name="exportDataBaseOnFtp" Width="251"  
                                            Content="Выгрузить прайс" 
                                            Template="{StaticResource btTemplate}" 
                                            HorizontalAlignment="Left"
                                            FontSize="12" 
                                            Height="26"
                                            Foreground="White" 
                                            Background="#a3a3a4"
                                            Click="exportDataBaseOnFtp_Click"/>

                                    <Button x:Name="exportTemplatesOnFtp" Width="251" Content="Выгрузить шаблоны" 
                                            Template="{StaticResource btTemplate}" 
                                            FontSize="12" 
                                            Margin="0,5,0,0"
                                            HorizontalAlignment="Left"
                                            Height="26"
                                            Foreground="White" 
                                            Background="#a3a3a4"
                                            Click="exportTemplatesOnFtp_Click"/>

                                </StackPanel>
                            </Grid>
                        </Border>
                    </TabItem>
                    <!--Вкладка путей сохранения данных-->
                    <TabItem Header="Пути сохранения">
                        <Border Background="White" CornerRadius="0,10,10,10" BorderThickness="0">
                            <Grid Margin="15">
                                <StackPanel>
                                    <Label Content="Предложить пути сохранения" Foreground="Gray" FontSize="15" Margin="-7,0,0,0"/>

                                    <Label Content="Вывод в Excel:" Foreground="Gray" FontSize="12" FontFamily="Arial"/>
                                    <StackPanel Margin="0,-5,0,0" Orientation="Horizontal">
                                        <TextBox x:Name="ExcelImportFolderPath_textBox" Width="618" Padding="2" FontFamily="Arial" Foreground="Gray" FontSize="14" Margin="0,0,5,0"/>
                                        <Button x:Name="ExcelImportFolderPath_button"
                                                Template="{StaticResource btTemplate}" 
                                                Height="25" Width="25"
                                                Background="Coral"  
                                                ToolTip="Указать путь к папке"
                                                Click="ExcelImportFolderPath_button_Click">

                                            <Image Source="pack://application:,,,/resources/images/upload_from_file.png" Height="20" Width="20" Margin="0,0,0,0"/>
                                        </Button>
                                        <Button x:Name="DeleteExcelImportFolderPath_button"
                                                Template="{StaticResource btTemplate}" 
                                                Height="25" Width="25"
                                                Background="OrangeRed"  
                                                ToolTip="Удалить путь к папке"
                                                Margin="5,0"
                                                Click="DeleteExcelImportFolderPath_button_Click">

                                            <Image Source="pack://application:,,,/resources/images/delete_image.png" Height="20" Width="20" Margin="0,0,0,0"/>
                                        </Button>
                                    </StackPanel>

                                    <Label Content="Папка расчета:" Foreground="Gray" FontSize="12" FontFamily="Arial"/>
                                    <StackPanel Margin="0,-5,0,0" Orientation="Horizontal">
                                        <TextBox x:Name="CalcImportFolderPath_textBox" Width="618" Padding="2" FontFamily="Arial" Margin="0,0,5,0" Foreground="Gray" FontSize="14"/>
                                        <Button x:Name="CalcImportFolderPath_button"
                                                Template="{StaticResource btTemplate}" 
                                                Height="25" Width="25"
                                                Background="Coral"  
                                                ToolTip="Указать путь к папке"
                                                Click="CalcImportFolderPath_button_Click">

                                            <Image Source="pack://application:,,,/resources/images/upload_from_file.png" Height="20" Width="20" Margin="0,0,0,0"/>
                                        </Button>
                                        <Button x:Name="DeleteCalcImportFolderPath_button"
                                                Template="{StaticResource btTemplate}" 
                                                Height="25" Width="25"
                                                Background="OrangeRed"  
                                                ToolTip="Удалить путь"
                                                Margin="5,0"
                                                Click="DeleteCalcImportFolderPath_button_Click">

                                            <Image Source="pack://application:,,,/resources/images/delete_image.png" Height="20" Width="20" Margin="0,0,0,0"/>
                                        </Button>
                                    </StackPanel>

                                    <Label Content="Данные FTP-сервера" Foreground="Gray" FontSize="15" Margin="-7,10,0,0"/>

                                    <Label Content="Адрес:" Foreground="Gray" FontSize="12" FontFamily="Arial"/>
                                    <TextBox x:Name="ftpURL_textBox" Width="676" Margin="0,-5,0,0" Padding="2" FontFamily="Arial" HorizontalAlignment="Left" Foreground="Gray" FontSize="14"/>

                                    <StackPanel Orientation="Horizontal">
                                        <Label Content="Логин" Foreground="Gray" FontSize="12" FontFamily="Arial"/>
                                        <Label x:Name="ftpPassword_label" Content="Пароль" Margin="248,0,0,0" Foreground="Gray" FontSize="12" FontFamily="Arial"/>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal" Margin="0,-5,0,0">
                                        <TextBox x:Name="ftpUsername_textBox" Padding="2"
                                                 Width="271" Foreground="Gray" FontSize="14" FontFamily="Arial"/>

                                        <TextBox x:Name="ftpPassword_passwordBox" FontFamily="Arial" Padding="2" Margin="15,0" Width="260" Background="Transparent" Foreground="Gray" FontSize="14"/>

                                        <Button x:Name="saveFTPSettings_button"
                                                Content="СОХРАНИТЬ"
                                                Foreground="White"
                                                Template="{StaticResource btTemplate}" 
                                                Height="26" Width="115"
                                                Background="MediumSeaGreen"  
                                                ToolTip="Указать путь к папке"
                                                Click="saveFTPSettings_button_Click"/>
                                    </StackPanel>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </TabItem>

                    <!--Вкладка для разработчика-->
                    <TabItem Header="Для разработчика">
                        <Border Background="White" CornerRadius="0,10,10,10" BorderThickness="0">
                            <Grid Margin="15">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="30"/>
                                    <RowDefinition Height="30"/>
                                    <RowDefinition Height="30"/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>

                                <Label Content="Внешний вид" Foreground="Gray" FontSize="15" Grid.Row="0"/>

                                <StackPanel Margin="10,0" Orientation="Horizontal" Grid.Row="1">
                                    <CheckBox x:Name="displayIdOnCalc" Content="Отображение ID элемента в расчёте" VerticalContentAlignment="Center" FontFamily="Arial" Foreground="Gray" HorizontalAlignment="Left" Margin="5,0" Grid.Row="4" VerticalAlignment="Center" Height="16" BorderBrush="#a3a3a4" ClickMode="Release" Checked="displayIdOnCalc_Checked" Unchecked="displayIdOnCalc_Unchecked"/>
                                </StackPanel>

                                <StackPanel Margin="10,0" Orientation="Horizontal" Grid.Row="2">
                                    <CheckBox x:Name="takeAdministratorRules" Content="Наделить правами администратора" VerticalContentAlignment="Center" FontFamily="Arial" Foreground="Gray" HorizontalAlignment="Left" Margin="5,0" Grid.Row="4" VerticalAlignment="Center" Height="16" BorderBrush="#a3a3a4" ClickMode="Release" Checked="takeAdministratorRules_Checked" Unchecked="takeAdministratorRules_Unchecked"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </TabItem>
                </TabControl>
            </Border>

        </Border>

        <Button x:Name="exit_button" Grid.Column="1"
                Template="{StaticResource btTemplate}" 
                Height="35" Width="35"
                Background="OrangeRed" 
                VerticalAlignment="Top"
                HorizontalAlignment="Left"
                Margin="5,10,5,0" 
                ToolTip="Закрыть"
                Click="exit_button_Click">

            <Image Source="/resources/images/delete_image.png" Height="25" Width="25" Margin="0,0,0,0"/>
        </Button>
    </Grid>
</Window>
