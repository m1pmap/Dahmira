                                    <Label Content="Цвет категории" Foreground="Gray" FontSize="12" FontFamily="Arial"/>
                                    <Border BorderBrush="Gray" BorderThickness="1.7" HorizontalAlignment="Left" CornerRadius="5" Margin="0,-5,0,0" Width="251">
                                        <ComboBox x:Name="ExcelCategoryColors_comboBox" IsEditable="True" 
                                                  BorderThickness="0" Foreground="Gray" Margin="4,0" FontSize="15" FontFamily="Arial"
                                                  DisplayMemberPath="Name"/>
                                    </Border>

                                    <Label Content="Цвет раздела" Foreground="Gray" FontSize="12" FontFamily="Arial"/>
                                    <Border BorderBrush="Gray" BorderThickness="1.7" HorizontalAlignment="Left" CornerRadius="5" Margin="0,-5,0,0" Width="251">
                                        <ComboBox x:Name="ExcelChapterColors_comboBox" 
                                                  Margin="4,0" Foreground="Gray" FontSize="15" FontFamily="Arial"
                                                  BorderThickness="0"
                                                  IsEditable="True"  
                                                  DisplayMemberPath="Name"/>
                                    </Border>

                                    <Label Content="Цвет данных" Foreground="Gray" FontSize="12" FontFamily="Arial"/>
                                    <Border BorderBrush="Gray" BorderThickness="1.7" HorizontalAlignment="Left" CornerRadius="5" Margin="0,-5,0,0" Width="251">
                                        <ComboBox x:Name="ExcelDataColors_comboBox" IsEditable="True" BorderThickness="0"
                                                  Margin="4,0" Foreground="Gray" FontSize="15" FontFamily="Arial"
                                                  DisplayMemberPath="Name"/>
                                    </Border>

                                    <Label Content="Цвет за фото" Foreground="Gray" FontSize="12" FontFamily="Arial"/>
                                    <Border BorderBrush="Gray" BorderThickness="1.7" HorizontalAlignment="Left" CornerRadius="5" Margin="0,-5,0,0" Width="251">
                                        <ComboBox x:Name="ExcelPhotoBackgroundColors_comboBox" IsEditable="True" BorderThickness="0"
                                                  Margin="4,0" Foreground="Gray" FontSize="15" FontFamily="Arial"
                                                  DisplayMemberPath="Name"/>
                                    </Border>

                                    <Label Content="Примечания" Foreground="Gray" FontSize="12" FontFamily="Arial"/>
                                    <Border BorderBrush="Gray" BorderThickness="1.7" HorizontalAlignment="Left" CornerRadius="5" Margin="0,-5,0,0" Width="251">
                                        <ComboBox x:Name="ExcelNotesColors_comboBox" IsEditable="True" BorderThickness="0"
