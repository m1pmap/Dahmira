                                        <ComboBox x:Name="theme_comboBox" IsEditable="True" FontFamily="Arial" FontSize="15"
                                                  Margin="4,0" Foreground="Gray" BorderThickness="0">
                                            <ComboBoxItem Content="Светлая" Foreground="#a3a3a4"/>
                                            <ComboBoxItem Content="Тёмная" Foreground="Gray"/>
                                        </ComboBox>
                                    </Border>

                                    <StackPanel Orientation="Horizontal" Margin="0,-7,0,0">
                                        <Label Content="Ширина картинки" Foreground="Gray" FontSize="12" FontFamily="Arial"/>
                                        <Label Content="Высота картинки" Foreground="Gray" FontSize="12" FontFamily="Arial" Margin="73,0,0,0"/>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal" Margin="0,-5,0,5">
                                        <TextBox x:Name="ExcelImageWidth"
