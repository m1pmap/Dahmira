            <ColumnDefinition x:Name="mainSettingsPlaceWidth" Width="850*"/>
            <ColumnDefinition Width="50*"/>
        </Grid.ColumnDefinitions>

        <Border Background="White" CornerRadius="15" BorderThickness="1.7" BorderBrush="Gray">
