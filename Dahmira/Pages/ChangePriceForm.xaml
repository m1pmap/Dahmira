<Window x:Class="Dahmira.Pages.ChangePriceForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Dahmira.Pages"
        mc:Ignorable="d"
        Title="ChangePriceForm" Height="135" Width="253"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize" WindowStyle="None" AllowsTransparency="True" Background="Transparent" KeyDown="Window_KeyDown" MouseDown="Window_MouseDown">

    <Window.Resources>
        <!--Стиль для кнопки с закруглёнными краями-->
        <ControlTemplate TargetType="Button" x:Key="btTemplate">
            <Border x:Name="border"
          CornerRadius="8" 
          Background="{TemplateBinding Background}">
                <Grid 
              HorizontalAlignment="Center" 
              VerticalAlignment="Center">
                    <ContentPresenter HorizontalAlignment="Center" 
                VerticalAlignment="Center" 
                Content="{TemplateBinding Content}" 
                ContentTemplate="{TemplateBinding ContentTemplate}"/>
                </Grid>
            </Border>
            <ControlTemplate.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter TargetName="border" Property="Background" Value="LightBlue"/>
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>

        <Style TargetType="ComboBoxItem">
            <Setter Property="Foreground" Value="Gray"/>
            <!-- Цвет текста -->
            <Setter Property="Background" Value="White"/>
            <!-- Цвет фона -->
            <Setter Property="FontSize" Value="15"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="FontFamily" Value="Arial Black"/>
            <Setter Property="Foreground" Value="Gray"/>
            <Setter Property="BorderBrush" Value="Gray"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="border"
                 Background="White"
                 BorderBrush="{TemplateBinding BorderBrush}"
                 BorderThickness="1.7"
                 CornerRadius="4">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <!-- Изменение цвета при фокусе -->
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="CornFlowerBlue"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>


    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="45"/>
        </Grid.ColumnDefinitions>
        <Border Background="White" CornerRadius="15" Grid.Column="0" BorderBrush="Gray" BorderThickness="1.7">
            <Grid>
                <StackPanel Margin="10,5,10,0">
                    <Label Content="Производитель:" HorizontalAlignment="Left" VerticalAlignment="Center"
                           FontFamily="Arial" FontSize="12" Foreground="Gray"/>

                    <Border BorderBrush="Gray" BorderThickness="1.7" CornerRadius="5" Margin="0,-5,0,0">
                        <ComboBox x:Name ="Manufacturer_CB"  
                                  IsEditable="True"  
                                  FontSize="15"
                                  FontFamily="Arial"
                                  Foreground="Gray"
                                  VerticalAlignment="Center"
                                  DisplayMemberPath="name"
                                  BorderThickness="0"
                                  Margin="4,0"/>
                    </Border>

                    <Label Content="Процент изменения цены:" HorizontalAlignment="Left" VerticalAlignment="Center"
                           FontFamily="Arial" FontSize="12" Foreground="Gray"/>

                    <TextBox x:Name="discount_tb"
                             TextWrapping="Wrap"
                             VerticalAlignment="Center" 
                             FontFamily="Arial Black"
                             Foreground="Gray"
                             Width="auto"
                             FontSize="15"
                             Margin="0,-5,0,0"
                             Padding="2"
                             TextAlignment="Center"/>

                    <Button x:Name="ChangePrice_button"
                            Grid.Row="3"
                            Template="{StaticResource btTemplate}" 
                            Content="ПРИМЕНИТЬ" 
                            VerticalAlignment="Center"
                            Width="auto" 
                            Height="25" 
                            Background="MediumSeaGreen" Foreground="White" FontFamily="Arial Black" FontSize="14"
                            Margin="0,8"
                            Click="ChangePrice_button_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <Button x:Name="exit_button" Grid.Column="1"
                Template="{StaticResource btTemplate}" 
                Height="30" Width="30"
                Background="OrangeRed" 
                VerticalAlignment="Top"
                HorizontalAlignment="Left"
                Margin="5,10,0,0" 
                ToolTip="Закрыть окно"
                Click="exit_button_Click">

            <Image Source="/resources/images/delete_image.png" Height="22" Width="22" Margin="0,0,0,0"/>
        </Button>

    </Grid>
</Window>
