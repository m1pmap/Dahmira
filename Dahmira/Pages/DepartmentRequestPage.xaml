<Window x:Class="Dahmira.Pages.DepartmentRequestPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Dahmira.Pages"
        mc:Ignorable="d"
        Closed="Window_Closed" KeyDown="Window_KeyDown"
        Title="DepartmentRequestPage" AllowsTransparency="True" Background="Transparent" WindowStartupLocation="CenterScreen" WindowStyle="None" MaxHeight="1015" Height="1000" Width="770" Loaded="Window_Loaded">

    <Window.Resources>
        <!--Стиль для кнопки с закруглёнными краями-->
        <ControlTemplate TargetType="Button" x:Key="btTemplate">
            <Border x:Name="border"
            CornerRadius="10" 
            Background="{TemplateBinding Background}">
                <Grid 
            HorizontalAlignment="Center" 
            VerticalAlignment="Center">
                    <ContentPresenter HorizontalAlignment="Center" 
                      VerticalAlignment="Center" 
                      Content="{TemplateBinding Content}" 
                      ContentTemplate="{TemplateBinding ContentTemplate}"/>
                </Grid>
            </Border>
            <ControlTemplate.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter TargetName="border" Property="Background" Value="LightBlue"/>
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>

        <Style TargetType="TabItem">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border Name="Border" CornerRadius="7" BorderThickness="1.5" BorderBrush="Gray" Margin="1">
                            <ContentPresenter x:Name="ContentSite"
               VerticalAlignment="Center"
               HorizontalAlignment="Center"
               ContentSource="Header"
               Margin="2,7,2,7"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <!-- Состояние для выбранного TabItem -->
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="White"/>
                                <Setter Property="Foreground" Value="Gray"/>
                                <Setter Property="FontFamily" Value="Arial Black"/>
                            </Trigger>

                            <!-- Состояние для невыбранного TabItem -->
                            <Trigger Property="IsSelected" Value="False">
                                <Setter TargetName="Border" Property="Background" Value="#a3a3a4"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="FontFamily" Value="Arial Black"/>
                            </Trigger>

                            <!-- Состояние при наведении на TabItem -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="White"/>
                                <Setter Property="Foreground" Value="Gray"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="FontFamily" Value="Arial Black"/>
            <Setter Property="Foreground" Value="Gray"/>
            <Setter Property="BorderBrush" Value="Gray"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="border"
                         Background="White"
                         BorderBrush="{TemplateBinding BorderBrush}"
                         BorderThickness="1.7"
                         CornerRadius="4">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <!-- Изменение цвета при фокусе -->
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="CornFlowerBlue"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="67*"/>
            <ColumnDefinition Width="50"/>
        </Grid.ColumnDefinitions>


        <Border Background="White" CornerRadius="15" BorderThickness="1.5" BorderBrush="Gray">
            <ScrollViewer x:Name="scrollView" Margin="0,15,0,15" VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="10,-7,0,0">
                    <Image Source="/resources/images/dahmiraFullLogo.png" Height="78" Width="471"/>

                    <StackPanel Orientation="Horizontal" Margin="15,-4,0,0">
                        <StackPanel>
                            <Label Content="№ заявки" VerticalAlignment="Center" Foreground="Gray" FontSize="12" FontFamily="Arial"/>
                            <TextBox x:Name="requestNum_textBox" Width="252" FontSize="15" Padding="2" Margin="0,-5,0,0" FontFamily="Arial" TextChanged="TextBox_TextChanged"/>

                            <Label Content="Дата" VerticalAlignment="Center" Foreground="Gray" FontSize="12" FontFamily="Arial"/>
                            <Border Background="White" CornerRadius="4" BorderBrush="Gray" BorderThickness="1.7" Margin="0,-5,0,0">
                                <DatePicker x:Name="date_datePicker" FontSize="15" SelectedDate="2005-08-05" SelectedDateFormat="Short" BorderThickness="0" FontFamily="Arial" Foreground="Gray" Height="21"
                                            SelectedDateChanged="date_datePicker_SelectedDateChanged"/>
                            </Border>

                            <Label Content="Менеджер" VerticalAlignment="Center" Foreground="Gray" FontSize="12" FontFamily="Arial"/>
                            <TextBox x:Name="manager_textBox" Width="252" FontSize="15" Padding="2" Margin="0,-5,0,0" FontFamily="Arial" TextChanged="TextBox_TextChanged"/>
                        </StackPanel>

                        <StackPanel Margin="156,0,0,0">
                            <Label Content="Клиент" VerticalAlignment="Center" Foreground="Gray" FontSize="12" FontFamily="Arial"/>
                            <TextBox x:Name="client_textBox" Width="252" FontSize="15" Padding="2" Margin="0,-5,0,0" FontFamily="Arial" TextChanged="TextBox_TextChanged"/>

                            <Label Content="Страна" VerticalAlignment="Center" Foreground="Gray" FontSize="12" FontFamily="Arial"/>
                            <Border CornerRadius="4" BorderThickness="1.7" BorderBrush="Gray" Width="252" Margin="0,-5,0,0">
                                <ComboBox x:Name="country_comboBox" Foreground="Gray" FontFamily="Arial" IsEditable="True"
                                          BorderThickness="0" Margin="3,0,3,0.5" FontSize="15"
                                          TextBoxBase.TextChanged="TextBox_TextChanged">
                                    <ComboBoxItem Content="Беларусь"/>
                                    <ComboBoxItem Content="Смоленск"/>
                                    <ComboBoxItem Content="Белгород"/>
                                    <ComboBoxItem Content="Украина"/>
                                    <ComboBoxItem Content="СЛПК"/>
                                    <ComboBoxItem Content="Казахстан"/>
                                    <ComboBoxItem Content="Армения"/>
                                    <ComboBoxItem Content="Польша"/>
                                    <ComboBoxItem Content="Молдова"/>
                                    <ComboBoxItem Content="Литва"/>
                                    <ComboBoxItem Content="Румыния"/>
                                    <ComboBoxItem Content="Кыргызстан"/>
                                    <ComboBoxItem Content="Африка"/>
                                    <ComboBoxItem Content="Литва"/>

                                    <ComboBox.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <VirtualizingStackPanel />
                                        </ItemsPanelTemplate>
                                    </ComboBox.ItemsPanel>
                                </ComboBox>
                            </Border>

                            <Label Content="Локация" VerticalAlignment="Center" Foreground="Gray" FontSize="12" FontFamily="Arial"/>
                            <TextBox x:Name="location_textBox" Width="252" FontSize="15" Padding="2" Margin="0,-5,0,0" FontFamily="Arial"/>
                        </StackPanel>
                    </StackPanel>

                    <Label Content="Технические данные" HorizontalAlignment="Center" FontFamily="Arial Black" Foreground="Gray" FontSize="15" Margin="0,15,0,0"/>

                    <StackPanel Orientation="Horizontal" Margin="15,0">
                        <StackPanel>
                            <Label Content="Вид животного" VerticalAlignment="Center" Foreground="Gray" FontSize="12" FontFamily="Arial"/>
                            <Border CornerRadius="4" BorderThickness="1.7" BorderBrush="Gray" Width="252" Margin="0,-5,0,0">
                                <ComboBox x:Name="AnimalType_comboBox" Foreground="Gray" FontFamily="Arial" IsEditable="True"
                                          BorderThickness="0" Margin="3,0,3,0.5" FontSize="15"
                                          TextBoxBase.TextChanged="TextBox_TextChanged">
                                    <ComboBoxItem Content="Свинки"/>
                                    <ComboBoxItem Content="Коровки"/>
                                    <ComboBoxItem Content="Курочки"/>
                                    <ComboBoxItem Content="Перепелки"/>
                                    <ComboBoxItem Content="Индюшки"/>
                                    <ComboBoxItem Content="Утки"/>
                                    <ComboBoxItem Content="Другое"/>

                                    <ComboBox.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <VirtualizingStackPanel />
                                        </ItemsPanelTemplate>
                                    </ComboBox.ItemsPanel>
                                </ComboBox>
                            </Border>

                            <Label Content="Количество голов" VerticalAlignment="Center" Foreground="Gray" FontSize="12" FontFamily="Arial"/>
                            <TextBox x:Name="headCount_textBox" Width="252" FontSize="15" Padding="2" Margin="0,-5,0,0" FontFamily="Arial" TextChanged="TextBox_TextChanged"/>

                            <Label Content="Существующее здание" VerticalAlignment="Center" Foreground="Gray" FontSize="12" FontFamily="Arial"/>

                            <Border CornerRadius="4" BorderThickness="1.7" BorderBrush="Gray" Width="252" Margin="0,-5,0,0">
                                <ComboBox x:Name="isBuildingHas_comboBox" Foreground="Gray" FontFamily="Arial" IsEditable="True"
                                          BorderThickness="0" Margin="3,0,3,0.5" FontSize="15"
                                          TextBoxBase.TextChanged="TextBox_TextChanged">
                                    <ComboBoxItem Content="Да"/>
                                    <ComboBoxItem Content="Нет"/>

                                    <ComboBox.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <VirtualizingStackPanel />
                                        </ItemsPanelTemplate>
                                    </ComboBox.ItemsPanel>
                                </ComboBox>
                            </Border>
                        </StackPanel>

                        <StackPanel Margin="156,0,0,0">
                            <Label Content="Группа" VerticalAlignment="Center" Foreground="Gray" FontSize="12" FontFamily="Arial"/>
                            <TextBox x:Name="group_textBox" Width="252" Padding="2" FontSize="15" Margin="0,-5,0,0" FontFamily="Arial"/>

                            <Label Content="Максимальный вес" VerticalAlignment="Center" Foreground="Gray" FontSize="12" FontFamily="Arial"/>
                            <TextBox x:Name="maxWeight_textBox" Width="252" Padding="2" FontSize="15" Margin="0,-5,0,0" FontFamily="Arial"/>

                            <Label Content="Количество секций" VerticalAlignment="Center" Foreground="Gray" FontSize="12" FontFamily="Arial"/>
                            <TextBox  x:Name="sectionCount_textBox" Width="252" Padding="2" FontSize="15" Margin="0,-5,0,0" FontFamily="Arial"/>
                        </StackPanel>
                    </StackPanel>

                    <Label Content="Размеры в метрах:" HorizontalAlignment="Left" FontFamily="Arial Black" Foreground="Gray" Margin="15,15,0,0"/>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Label Margin="2.5,0,0,0" Content="L  =" FontFamily="Arial" Foreground="Gray" FontSize="15" />
                        <TextBox x:Name="LSize_textBox" Width="150" FontSize="15" Padding="2" VerticalAlignment="Center" Margin="0,0,0,0" FontFamily="Arial" TextChanged="TextBox_TextChanged"/>

                        <Label Margin="10,0,0,0" Content="H1 =" FontFamily="Arial" Foreground="Gray" FontSize="15" />
                        <TextBox x:Name="H1Size_textBox"  Width="150" FontSize="15" Padding="2" VerticalAlignment="Center" Margin="0,0,0,0" FontFamily="Arial"/>

                        <Label Margin="10,0,0,0" Content="H2 =" FontFamily="Arial" Foreground="Gray" FontSize="15" />
                        <TextBox x:Name="H2Size_textBox" Width="150" FontSize="15" Padding="2" VerticalAlignment="Center" Margin="0,0,0,0" FontFamily="Arial"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="15,0" HorizontalAlignment="Center">
                        <Label Content="W =" FontFamily="Arial" Foreground="Gray" FontSize="15" />
                        <TextBox x:Name="WSize_textBox" Width="150" FontSize="15" Padding="2" VerticalAlignment="Center" Margin="0,0,0,0" FontFamily="Arial" TextChanged="TextBox_TextChanged"/>

                        <Label Margin="12.5,0,0,0" Content="L1 =" FontFamily="Arial" Foreground="Gray" FontSize="15" />
                        <TextBox x:Name="L1Size_textBox" Width="150" FontSize="15" Padding="2" VerticalAlignment="Center" Margin="0,0,0,0" FontFamily="Arial"/>

                        <Label Margin="12.5,0,0,0" Content="L2 =" FontFamily="Arial" Foreground="Gray" FontSize="15" />
                        <TextBox x:Name="L2Size_textBox" Width="150" FontSize="15" Padding="2" VerticalAlignment="Center" Margin="0,0,0,0" FontFamily="Arial"/>
                    </StackPanel>

                    <Image Margin="0,10,0,0" Source="/resources/images/requestPlan.png" Height="209" Width="566"/>

                    <!--<StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <CheckBox x:Name="isCaclNeed_checkBox" Content="РАСЧЕТ" FontFamily="Arial" Foreground="Gray" VerticalContentAlignment="Center"/>
                        <CheckBox x:Name="isPlanNeed_checkBox" Content="ЧЕРТЕЖ" FontFamily="Arial" Foreground="Gray" VerticalContentAlignment="Center" Margin="10,0,0,0" />
                    </StackPanel>-->

                    <Label Content="Дополнительное описание системы" HorizontalAlignment="Center" FontFamily="Arial Black" Foreground="Gray" FontSize="15" Margin="0,15,0,10"/>

                    <StackPanel Margin="15,0">
                        <StackPanel Orientation="Horizontal">
                            <CheckBox x:Name="maintanance_checkBox" Content="Содержание" FontFamily="Arial" Foreground="Gray" VerticalContentAlignment="Center" Unchecked="maintanance_checkBox_Unchecked"
                                      Checked="CheckBox_Checked"/>
                            <TextBox x:Name="maintanance_textBox" Width="535" FontSize="15" Padding="2" VerticalAlignment="Center" Margin="34,0,0,0" FontFamily="Arial" 
                                     TextChanged="maintanance_textBox_TextChanged"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <CheckBox x:Name="feeding_checkBox" Content="Кормление" FontFamily="Arial" Foreground="Gray" VerticalContentAlignment="Center" Unchecked="feeding_checkBox_Unchecked"
                                      Checked="CheckBox_Checked"/>
                            <TextBox x:Name="feeding_textBox" Width="535" FontSize="15" Padding="2" VerticalAlignment="Center" Margin="42,0,0,0" FontFamily="Arial"
                                     TextChanged="feeding_textBox_TextChanged"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal">
                            <CheckBox x:Name="watering_checkBox" Content="Поение" FontFamily="Arial" Foreground="Gray" VerticalContentAlignment="Center" Unchecked="watering_checkBox_Unchecked"
                                      Checked="CheckBox_Checked"/>
                            <TextBox x:Name="watering_textBox" Width="535" FontSize="15" Padding="2" VerticalAlignment="Center" Margin="62,0,0,0" FontFamily="Arial"
                                     TextChanged="watering_textBox_TextChanged"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <CheckBox x:Name="microclimate_checkBox" Content="Микроклимат" FontFamily="Arial" Foreground="Gray" VerticalContentAlignment="Center" Unchecked="microclimate_checkBox_Unchecked"
                                      Checked="CheckBox_Checked"/>
                            <TextBox x:Name="microclimate_textBox" Width="535" FontSize="15" Padding="2" VerticalAlignment="Center" Margin="29,0,0,0" FontFamily="Arial"
                                     TextChanged="microclimate_textBox_TextChanged"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal">
                            <CheckBox x:Name="manureRemoval_checkBox" Content="Новозоудаление" FontFamily="Arial" Foreground="Gray" VerticalContentAlignment="Center" Unchecked="manureRemoval_checkBox_Unchecked"
                                      Checked="CheckBox_Checked"/>
                            <TextBox x:Name="manureRemoval_textBox" Width="535" FontSize="15" Padding="2" VerticalAlignment="Center" Margin="10,0,0,0" FontFamily="Arial"
                                     TextChanged="manureRemoval_textBox_TextChanged"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <CheckBox x:Name="electricity_checkBox" Content="Электрика" FontFamily="Arial" Foreground="Gray" VerticalContentAlignment="Center" Unchecked="electricity_checkBox_Unchecked"
                                      Checked="CheckBox_Checked"/>
                            <TextBox x:Name="electricity_textBox" Width="535" FontSize="15" Padding="2" VerticalAlignment="Center" Margin="45,0,0,0" FontFamily="Arial"
                                     TextChanged="electricity_textBox_TextChanged"/>
                        </StackPanel>
                    </StackPanel>

                    
                    <!--<StackPanel Orientation="Horizontal" Margin="15,0">

                        <StackPanel Margin="156,0,0,0">
                            <Label Content="Электрика" VerticalAlignment="Center" Foreground="Gray" FontSize="12" FontFamily="Arial"/>
                            <Border CornerRadius="4" BorderThickness="1.7" BorderBrush="Gray" Width="252" Margin="0,-5,0,0">
                                <ComboBox x:Name="electricity_comboBox" Foreground="Gray" FontFamily="Arial" IsEditable="True"
                                          BorderThickness="0" Margin="3,0,3,0.5" FontSize="15">
                                    <ComboBoxItem Content="Да"/>
                                    <ComboBoxItem Content="Нет"/>
                                </ComboBox>
                            </Border>
                        </StackPanel>
                    </StackPanel>-->

                    <Label Margin="15,0" Content="Примечание" VerticalAlignment="Center"  Foreground="Gray" FontSize="12" FontFamily="Arial"/>
                    <TextBox x:Name="note_textBox" FontSize="15" Padding="1.5" Margin="15,-5,15,0" FontFamily="Arial" Width="659" HorizontalAlignment="Left"/>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <Button x:Name="exit_button" Grid.Column="1"
                Template="{StaticResource btTemplate}"
                Height="40" Width="40"
                Margin="0,10,0,0"
                VerticalAlignment="Top"
                Background="OrangeRed" 
                ToolTip="Закрыть окно"
                Click="exit_button_Click">

            <Image Source="/resources/images/delete_image.png" Height="30" Width="30" Margin="0,0,0,0"/>
        </Button>



    </Grid>
</Window>
