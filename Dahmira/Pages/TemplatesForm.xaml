<Window x:Class="Dahmira.Pages.TemplatesForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Dahmira.Pages"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="Шаблоны прайса" Height="455" Width="850"
        Closing="Window_Closing"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True"
        WindowStyle="None"
        Background="Transparent"
        MouseDown="Window_MouseDown">

    <Window.Resources>
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="FontFamily" Value="Arial"/>
            <Setter Property="Foreground" Value="Gray"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="border"
                         Background="White"
                         BorderBrush="Gray"
                         BorderThickness="2"
                         CornerRadius="4">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <!-- Изменение цвета при фокусе -->
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="CornFlowerBlue"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="DataGrid">
            <!-- Make the border and grid lines a little less imposing -->
            <Setter Property="BorderBrush" Value="#DDDDDD" />
            <Setter Property="HorizontalGridLinesBrush" Value="#DDDDDD" />
            <Setter Property="VerticalGridLinesBrush" Value="#DDDDDD" />


            <Setter Property="CellStyle">
                <Setter.Value>
                    <Style TargetType="DataGridCell">
                        <Style.Triggers>
                            <!--Highlight selected rows-->
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="CornflowerBlue"/>
                                <Setter Property="BorderBrush" Value="CornflowerBlue"/>
                                <Setter Property="Foreground" Value="White" />
                            </Trigger>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="Background" Value="CornflowerBlue"/>
                                <Setter Property="BorderBrush" Value="CornflowerBlue"/>
                                <Setter Property="Foreground" Value="White" />
                            </Trigger>
                        </Style.Triggers>
                        <!-- Add some padding around the contents of a cell -->
                        <Setter Property="Tag" Value="{Binding IsEditing, RelativeSource={RelativeSource Self}}"/>
                        <Setter Property="Padding" Value="4,3,4,3" />
                        <Setter Property="BorderBrush" Value="Transparent"/>
                        <Setter Property="BorderThickness" Value="1"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="DataGridCell">
                                    <Border Padding="{TemplateBinding Padding}" 
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    Background="{TemplateBinding Background}">
                                        <ContentPresenter />
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Setter Property="FocusVisualStyle">
                            <Setter.Value>
                                <Style TargetType="Control">
                                    <Setter Property="BorderBrush" Value="Transparent" />
                                </Style>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>

        <ControlTemplate TargetType="Button" x:Key="btTemplate">
            <Border x:Name="border"
            CornerRadius="5"
            Background="{TemplateBinding Background}">
                <StackPanel Orientation="Horizontal" 
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center">
                    <ContentPresenter HorizontalAlignment="Center" 
                              VerticalAlignment="Center" 
                              Content="{TemplateBinding Content}" 
                              ContentTemplate="{TemplateBinding ContentTemplate}"/>
                </StackPanel>
            </Border>
            <ControlTemplate.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter TargetName="border" Property="Background" Value="LightBlue"/>
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>
    </Window.Resources>

    <Border Background="White" BorderBrush="Gray" BorderThickness="1.7" CornerRadius="15">
        <Grid>
            <!--DataGrid Раздел-->
            <DataGrid x:Name="DG_Chapter"
              ItemsSource="{Binding Chapter}" 
              Background="{x:Null}" Foreground="#FF544F4F" MinRowHeight="25"
              AutoGenerateColumns="False"
              CanUserResizeRows="False"
              CanUserAddRows="False"
              DataGrid.HeadersVisibility ="Column"
               IsReadOnly="True"
              Grid.Row="1" FontSize="14"
              SelectionChanged="Get_OpenChapter_File_DAH" Margin="10,0,0,-5">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Раздел" Binding="{Binding}" Width="*" />
                </DataGrid.Columns>
            </DataGrid>


            <!--DataGrid Шаблон-->
            <DataGrid x:Name="DG_Templates"
              ItemsSource="{Binding Templates}" 
              Background="{x:Null}" Foreground="#FF544F4F" MinRowHeight="25"
              AutoGenerateColumns="False"
              CanUserResizeRows="False"
              CanUserAddRows="False"
              IsReadOnly="True"
              DataGrid.HeadersVisibility ="Column"
              Grid.Row="1" Grid.Column="1" FontSize="14" Margin="2,0,0,-5"
              MouseDoubleClick="DG_Templates_MouseDoubleClick">


                <DataGrid.Columns>
                    <DataGridTextColumn  Header="Шаблон" Binding="{Binding NameTemplates_DAH}" Width="*" MinWidth="350"/>
                </DataGrid.Columns>
            </DataGrid>

            <!--GroupBox-->
            <StackPanel Orientation="Vertical" Grid.Column="2" Margin="10,0,10,-11" Grid.RowSpan="2">
                <Label  Content="Раздел:" 
                FontSize="16" 
                FontStyle="Italic" 
                Foreground="#FF908A8A" 
                FontWeight="Bold" 
                Margin="-5,0,0,-7"/>

                <TextBox   x:Name="TB_Chapter"
                   FontSize="16"  
                   FontStyle="Italic" 
                   Background="#FFFDFAFA" Padding="2"/>

                <Label  Content="Шаблон:" 
                HorizontalAlignment="Left" 
                FontSize="16" FontStyle="Italic" 
                Margin="-5,0,0,-7" 
                Foreground="#FF908A8A" 
                FontWeight="Bold" />

                <TextBox x:Name="TB_Templates" 
                 FontSize="16"  
                 FontStyle="Italic" 
                 Background="#FFFDFAFA" Padding="2"/>

                <Button Template="{StaticResource btTemplate}"
                Content="СОЗДАТЬ"  
                Height="34" Background="MediumSeaGreen" Foreground="White" FontFamily="Arial Black"
                Click="CreateTemplates_Click" Margin="0,5,0,0"/>

                <Button Template="{StaticResource btTemplate}"
                Content="ДОБАВИТЬ В РАСЧЁТ" 
                Height="34" Background="#FFB02E" Margin="0,20,0,0"
                Foreground="White" FontFamily="Arial Black"
                Click="AddCalcTempletes_Click"/>

                <StackPanel Orientation="Horizontal" Margin="0,4">
                    <Button
                Template="{StaticResource btTemplate}"
                Background="Coral" Foreground="White" FontFamily="Arial Black"
                Height="34"  Click="ChangeCalc_Click" BorderBrush="#FFA09898"
                Content="ИЗМЕНИТЬ" Padding="10,0" Width="94"
                Margin="0,0,2,0"/>


                    <Button Height="34" Width="94"
                    Template="{StaticResource btTemplate}"
                    Background="OrangeRed"
                    Foreground="White"
                    FontFamily="Arial Black"
                    Click="DeleteCalc_Click"
                    Content="УДАЛИТЬ"
                    Margin="2,0,0,0"/>
                </StackPanel>

                <Button x:Name="DownloadTebplate_button"
                Template="{StaticResource btTemplate}"
                Content="ЗАГРУЗИТЬ ШАБЛОНЫ" 
                Height="34" Background="#FF50CBFF" Margin="0,1,0,0"
                Foreground="White" FontFamily="Arial Black"
                Click="DownloadTebplate_button_Click"/>

                <Label  Content="Поиск" 
                FontSize="16" 
                HorizontalAlignment="Center" 
                Foreground="#FF908A8A" 
                FontWeight="Bold"
                Margin="0,7,0,-10"/>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,0">
                    <TextBox x:Name="TB_Search" 
                     VerticalAlignment="Center" Height="24" FontSize="16"  
                     FontStyle="Italic" Width="152" Background="#FFFDFAFA" 
                     Margin="0,0,6,0" 
                     TextChanged="SearchTextBox_TextChanged" Padding="2"/>

                    <Button x:Name="searchGrid_Button" Visibility="Visible"
                    Template="{StaticResource btTemplate}"
                    Height="34" Width="34"
                    Background="#FF50CBFF"
                    MinHeight="18"
                    MinWidth="18" 
                    VerticalAlignment="Center"
                    Click="NextButton_Click">
                        <Image Source="/resources/images/search.png" Height="25" Width="28"/>
                    </Button>
                </StackPanel>


                <Label x:Name="LB_info"
               Content=""  
               HorizontalContentAlignment="Center" 
               FontSize="14" 
               FontWeight="Bold" 
               Foreground="MediumSeaGreen" Margin="0,5,0,0"/>

                <ProgressBar Margin="0,25,0,-10" Width="192"
                     x:Name="DownloadProgressBar" Height="24"
                     Foreground="MediumSeaGreen">
                    <ProgressBar.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform ScaleY="-1"/>
                            <SkewTransform/>
                            <RotateTransform/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </ProgressBar.RenderTransform>
                </ProgressBar>

                <Button Template="{StaticResource btTemplate}"
                Content="ЗАКРЫТЬ" 
                Height="34" Background="Coral" 
                Click="Close_Click" Foreground="White" 
                FontFamily="Arial Black" 
                FontWeight="Bold" 
                BorderBrush="#FFA09898"/>
            </StackPanel>
            <Grid.RowDefinitions>
                <RowDefinition Height="10"/>
                <RowDefinition Height="424.04" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="210"/>
                <ColumnDefinition Width="422" />
                <ColumnDefinition Width="212"/>


            </Grid.ColumnDefinitions>
        </Grid>
    </Border>
</Window>
